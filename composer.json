{
    "name": "majo44/php-multi-room-chat",
    "description": "A multi-room web chat application built with PHP and WebSockets",
    "type": "project",
    "keywords": ["php", "chat", "websockets", "real-time", "multi-room"],
    "license": "MIT",
    "homepage": "https://github.com/majo44/php-multi-room-chat",
    "authors": [
        {
            "name": "majo44"
        }
    ],
    "require": {
        "php": ">=8.0",
        "cboden/ratchet": "^0.4",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Chat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chat\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "websocket": "php bin/websocket-server.php",
        "setup": "php bin/setup-database.php",
        "post-install-cmd": [
            "php bin/setup-database.php"
        ]
    }
}